@model LoginModule.Model.ResetPassModel
@{
    ViewBag.Title = "ResetPass";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

    <div class="login-box">
        <div class="login-logo">
            Reset Password
        </div>

        <div class="login-box-body">
            <p class="login-box-msg">Type New Password</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @*<div class="form-horizontal">*@
                @*<h4>ResetPassModel</h4>*@
                @*<hr />*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-0" })
                    @*<div class="col-md-6">*@
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "Pass" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    @*</div>*@
                </div>

                <div class="form-group has-feedback">
                    @Html.LabelFor(model => model.RePassword, htmlAttributes: new { @class = "control-label col-md-0" })
                    @*<div class="col-md-10">*@
                    @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control", @id = "RePass" } })
                    @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                    @*</div>*@
                </div>

                @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-warning" value="Confirm" onclick="Verified()" />
                    </div>
                </div>*@

                <div class="row">
                    <div class="col-xs-4">
                        <input type="submit" class="btn btn-warning" value="Confirm" />
                    </div>
                </div>

                @*</div>*@
            }

        </div>
    </div>

